@model WebPizzaShop.Models.Check
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Check</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CloseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CloseDate)
        </dd>
        <dt class="col-sm-2">
            Сумма
        </dt>
        <dd class="col-sm-10">
            @ViewData["SumCheck"] руб.
        </dd>
    </dl>
</div>
<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Цена
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.pizzas)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price руб.
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


<div>
    <a asp-action="Index">Назад в список</a>
</div>
