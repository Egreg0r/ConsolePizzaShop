@model WebPizzaShop.Models.Check

@{
    ViewData["Title"] = "Create";
}

<h1>Заказ</h1>

<h4>Новый заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Client.Name" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.First().Pizza.Name" class="control-label"></label>
                <select asp-for="Orders.First().PizzaId" class="form-control" asp-items="ViewBag.pizzaId"></select>
                <input type="number" name="pizcol" value="1" min="1" max="20" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" name="Create" value="Создать" class="btn btn-primary" />
                <input type="hidden" asp-for="Orders" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку чеков</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
